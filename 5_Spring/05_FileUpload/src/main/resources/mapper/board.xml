<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mapper.BoardMapper">

	<insert id="insert" parameterType="Board" useGeneratedKeys="true" keyProperty="no" keyColumn="no"> <!-- use부터는 컨트롤러에서 int no가 안받아질때 사용하는 방법 -->
		INSERT INTO board(title, content, url)
		VALUES(#{title}, #{content}, #{url})
	</insert>
	
	<select id="selectAll" parameterType="Paging" resultType="Board">
		SELECT * FROM board
		LIMIT #{offset}, #{limit}
	</select>
	
	<select id="total" resultType="int">
		SELECT count(*) FROM board
	</select>
	
	<select id="select" parameterType="int" resultType="Board">
		SELECT * FROM board
		WHERE no = #{no}
	</select>
	
	<update id="update" parameterType="Board">
		UPDATE board SET title=#{title}, content=#{content}, url=#{url}
		WHERE no=#{no}
	</update>
	
	<delete id="delete" parameterType="int">
		DELETE FROM board WHERE no=#{no}
	</delete>
</mapper>